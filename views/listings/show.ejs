<% layout("/layouts/plate") -%>

    <body>
        <div class="row">
            <div class="col-8 offset-3">
                <h3> <%= data1.title %> </h3>

                <div class="card " style="width: 40rem;">
                    <img src="<%= data1.image %>" class="card-img-top" alt="card_image">
                    <div class="card-body">
                        <p class="card-text mb-3 mt-3 ms-3" >Owned by: Mr. <%= data1.owner.username %></p>
                        <p class="card-text mb-3 mt-3 ms-3"><%= data1.description %></p>
                        <p class="card-text mb-3 mt-3 ms-3">Price:  &#8377;<%= data1.price%> </p>
                        <p class="card-text mb-3 mt-3 ms-3">Location: <%= data1.location %></p>
                        <p class="card-text mb-3 mt-3 ms-3">Country: <%= data1.country %></p>

                    </div>
                </div>
 
                
            <% if (currUser && data1.owner._id.equals(currUser._id) ) { %>
                 
                <div class="row">
                    <div class="col-4">
                        <a href="/listings/<%= data1._id %>/edit" class="btn btn-dark add-btn col-4 mb-3 mt-2">Edit</a>
                    </div>
                    
                    <div class="col-3">
                        <form method="post" action="/listings/<%= data1._id %>?_method=Delete">
                            <button class="btn btn-dark col-6 mb-3 mt-2">Delete</button>
                        </form>
                    </div>
                    
                </div>
            <% } %>   
                
                

                <!-- adding review code -->
                
                <div class="col-8  mt-3 mb-3">

                    <% if (currUser) { %>
                     
                    
                    <h4>Leave a Review</h4>
                    <form action="/listings/<%= data1.id %>/reviews" class="needs-validation" novalidate method="post">
                        <div class="mt-3 mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <input type="range" min="1" max="5" name="review[rating]" id="rating" class="form-range">
                        </div>
                        <div class="mt-3 mb-3">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                            <div class="invalid-feedback">
                                Feedback plealse!
                            </div>
                            <div class="valid-feedback">
                                Thanks!
                            </div>
                        </div>
                        <button class="btn btn-outline-dark">Submit</button>
                    </form>
                    <% } %>
                    <hr>
                    
                    <p><b>All Reviews</b></p>
                    <div class="row ">
                    <% for( review of data1.reviews) { %>
                        <div class="card col-5 ms-3 mb-3 listing-card " >
                            <div class="card-body">
                                <h5 class="card-title">@<%= review.author.username %></h5>
                                <div class="card-text"><%= review.comment %></div>
                                <div class="card-text"><%= review.rating %> stars</div>
                                <form action="/listings/<%= data1._id %>/reviews/<%= review._id %>?_method=DELETE" method="post" class="mb-3">
                                    <button class="btn btn-sm btn-dark">Delete</button>
                                </form>


                            </div>
                        </div>
                    <% } %>
                    </div>
                </div>
            </div>
            
        </div>







    </body>